<h2>Blog Article Categories <%= link_to 'New Category', new_admin_category_path,  class:'btn btn-primary' %></h2>

<p id="notice" class="error"><%= notice %></p>
<%= form_for_filterrific @filterrific do |f| %>
    <div>
      <div class="row">
        <div class="col">
          <div>
            <%= f.text_field(:search_query, autofocus: true, placeholder: 'Category name') %>
          </div>
        </div>
      </div>
    </div>
    <div>
      <%= link_to(
              'Reset filters',
              reset_filterrific_url,
          ) %>
    </div>
    <%# add an automated spinner to your form when the list is refreshed %>
    <%= render_filterrific_spinner %>
<% end %>

<%= render(
      partial: '/admin/categories/partials/list',
      locals: { categories: @categories }
) %>