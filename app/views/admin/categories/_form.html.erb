<%= form_with(model: [:admin, @category], class:'form-control', local: true) do |form| %>
<div class="form-group">
  <%= form.label :category_name %>
  <%= form.text_field :category_name, id: :category_category_name,  class:'form-control' %>
  <% if @category.errors[:category_name][0] %>
      </br>
      <p class="alert alert-danger">
        <%= @category.errors[:category_name][0] %>
      </p>
  <% end %>
</div>

<div class="form-group">
  <%= form.submit class:'btn btn-success' %>
  <%= link_to 'Back', admin_categories_path, class:'btn btn-primary' %>

</div>
<% end %>