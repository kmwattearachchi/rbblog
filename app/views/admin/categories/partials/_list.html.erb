<div id="filterrific_results">

  <table class="table table-condensed">

    <thead>
    <tr>
      <th>Category Name</th>
      <th>Actions</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
        <tr>
          <td><%= category.category_name %></td>
          <td><%= link_to 'Edit', edit_admin_category_path(category),  class:'btn btn-success' %></td>
          <td><%= link_to 'Delete', admin_category_url(category),  class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>

  </table>

  <div class="digg_pagination">
    <%= will_paginate @blog_article, :container => false %>
  </div>
</div>

