<div class="row">

  <!-- Post Content Column -->
  <div class="col-lg-8">
    </br>

    <% if notice %>
        <p id="notice" class="alert alert-success"><%= notice %></p>
    <% end %>

    <!-- Title -->
    <h1 class="mt-4"><%= @article.article_name %></h1>

    <% if user_signed_in? %>
        <%= link_to 'Edit', edit_admin_blog_article_path(@article) %> |
        <%= link_to 'Back', admin_blog_articles_path %>
    <% end %>
    <!-- Author -->
    <p class="lead">
      by
      <a href="#">Kalana</a>
    </p>

    <div class="row">
      <div class="small-2 large-4 columns">
        <% if current_user %>
            <%= rating_for @article, "visual_effects", enable_half: true, disable_after_rate: false, cancel_hint: 'Cancel this vote!', imdb_avg: true, target: '#hintDiv'  %>
            <div id="hintDiv"></div>
        <% else %>
            <%= rating_for @article, "visual_effects" %>
        <% end %>
      </div>
    </div>

    <hr>

    <!-- Date/Time -->
    <p>Posted on January  <%= @article.created_at %></p>

    <hr>

    <!-- Preview Image -->
    <img class="img-fluid rounded" src="<%= @article.article_main_image.url  %>" alt="" style="height:300px;width:900px">

    <hr>

    <!-- Post Content -->
    <p class="lead">
      <%= @article.article_body %>
    </p>

    <%= render 'article/comments/form' %>

    <!--Comments -->
    <%= render 'article/comments/comment' %>
  </div>

</div>

</div>
<!-- /.row -->
